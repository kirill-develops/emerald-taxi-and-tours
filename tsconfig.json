{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@*": ["./*"],
      "@AboutLayout/*":["components/AboutLayout/*"],
      "@Form/*": ["components/BookingLayout/FormComponents/*"],
      "@Navbar/*": ["components/NavbarLayout/*"],
      "@NavSearch/*": ["components/NavSearch/*"],
      "@Tour/*" : ["components/TourComponents/*"],
      "@TourPageLayout/*" : ["components/TourPageLayout/*"],
      "@Transfer/*" : ["components/TransferComponents/*"],
      "@TransferPageLayout/*" : ["components/TransferPageLayout/*"],
      "@Public/*" : ["../public/*"],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "next.config.js"  ],
  "exclude": [
    "node_modules"
  ]
}
